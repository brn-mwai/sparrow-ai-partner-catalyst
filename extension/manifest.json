{
  "manifest_version": 3,
  "name": "Sparrow AI - Sales Training",
  "version": "1.0.0",
  "description": "AI-powered sales training platform. Never wing a call again.",

  "permissions": [
    "storage",
    "sidePanel",
    "activeTab"
  ],

  "host_permissions": [
    "https://www.linkedin.com/*",
    "https://linkedin.com/*",
    "https://sparrow-ai.brianmwai.com/*",
    "http://localhost:3000/*"
  ],

  "background": {
    "service_worker": "background/service-worker.js",
    "type": "module"
  },

  "content_scripts": [
    {
      "matches": [
        "https://www.linkedin.com/in/*",
        "https://linkedin.com/in/*"
      ],
      "js": [
        "content/linkedin-detector.js",
        "content/button-injector.js"
      ],
      "css": ["content/styles.css"],
      "run_at": "document_idle"
    },
    {
      "matches": [
        "https://sparrow-ai.brianmwai.com/auth/extension*",
        "http://localhost:3000/auth/extension*"
      ],
      "js": ["content/auth-listener.js"],
      "run_at": "document_idle"
    }
  ],

  "side_panel": {
    "default_path": "sidepanel/index.html"
  },

  "action": {
    "default_popup": "popup/index.html",
    "default_icon": {
      "16": "assets/icons/icon-16.png",
      "32": "assets/icons/icon-32.png",
      "48": "assets/icons/icon-48.png",
      "128": "assets/icons/icon-128.png"
    },
    "default_title": "Sparrow AI - Sales Training"
  },

  "icons": {
    "16": "assets/icons/icon-16.png",
    "32": "assets/icons/icon-32.png",
    "48": "assets/icons/icon-48.png",
    "128": "assets/icons/icon-128.png"
  },

  "web_accessible_resources": [
    {
      "resources": ["assets/*", "lib/*"],
      "matches": ["https://www.linkedin.com/*", "https://linkedin.com/*", "<all_urls>"]
    }
  ]
}
